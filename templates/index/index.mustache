{{> header }}

<div id="main">

    <style>
     canvas {
	 position: fixed;
	 top: 0;
	 left: 0;
	 z-index: -999;
     }
     #timething {
	 font-family: "Raleway" !important;
	 font-size: 3rem;
	 color: white;
	 z-index: 999;
	 position: fixed;
	 right: 20px;
	 bottom: calc(50% - 3rem);
	 width: 45vw;
	 text-align: right;
     }
     #main {
	 z-index: 1;
	 padding: 50px;
	 margin-left: 90px;
     }
     #overlay {
	 position: absolute;
	 z-index: 99;
	 background: rgba(0,0,0,0.9);
	 width: 100vw;
	 height: 100vh;
	 top: 0;
     }
    </style>

    <script src="/js/processing.min.js"></script>    
    <canvas data-processing-sources="/index/Hex.pde /index/YAHG.pde"></canvas>

    <div id="timething"><noscript><i>Hello</i>, and welcome to <b>Argarak's Nexus!</b></noscript></div>
    
    <script>
     var calltimeIndex = function(message) {
	 $("#timething").html("<i>" + message + "</i>, and welcome to <b>Argarak's Nexus!</b>");
     }
     
     var d = new Date();
     var hrs = d.getHours();
     
     if(hrs >= 6 && hrs < 12) {
	 calltimeIndex("Good Morning");
     } else if(hrs >= 12 && hrs < 18) {
	 calltimeIndex("Good Afternoon");
     } else if(hrs >= 18 && hrs < 21) {
	 calltimeIndex("Good Evening");
     } else {
	 calltimeIndex("Good Night");
     }     
    </script>
    
</div>

<div id="overlay"></div>

{{> footer }}
